<% provide(:title, 'Listing Admins') %>
<h1>Listing admins</h1>

<%= link_to 'New Admin', new_admin_user_path, class:"btn-default btn" if current_admin? %>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Admin?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr class="user-row">
        <td><%= admin.username %></td>
        <td><%= admin.password %></td>
        <td><%= admin.admin %></td>
        <td><%= link_to 'Show', admin_user_path(admin) %></td>
        <% if current_admin? %>
          <td><%= link_to 'Edit', edit_admin_user_path(admin) %></td>
          <td><%= link_to 'Destroy', admin_user_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
