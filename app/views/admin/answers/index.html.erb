<% provide(:title, 'Listing Answers and Updates') %>
<h1>Listing answers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Label</th>
      <th>Url</th>
      <th>Type</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr class="answer-row">
        <td class="answer-label">
          <%= answer.label %>
        </td>
        <td class="answer-url">
          <%= answer.url %>
        </td>
        <td class="answer-type">
          <%= answer.type %>
        </td>
        <td class="answer-edit-link">
          <%= link_to 'Edit', edit_admin_answer_path(answer) %>
        </td>
        <td class="answer-delete-link">
          <%= link_to 'Delete', admin_answer_path(answer, question_id: answer.question_id), :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Listing updates</h1>

<table class="table">
  <thead>
    <tr>
      <th>Label</th>
      <th>Url</th>
      <th>Type</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr class="update-row">
        <td class="update-label">
