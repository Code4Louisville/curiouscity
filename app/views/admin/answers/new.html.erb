<% provide(:title, 'New Answer') %>
<h1>New answer</h1>

<%= form_for(@answer, :url => admin_answers_path) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>
      <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li class="error-message"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :label %><br>
    <%= f.text_area :label, size: "100x10" %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_area :url, size: "100x3" %>
  </div>
  <div class="field">
    <%= f.hidden_field :question_id %>
  </div>
  <div class="field">
    <%= f.radio_button :type, Answer::Type::Answer %>
    <%= f.label :type, 'Answer', value: Answer::Type::Answer %>
    <%= f.radio_button :type, Answer::Type::Update %>
    <%= f.label :type, 'Update', value: Answer::Type::Update %>
  </div>
  <%= f.submit "Add answer to question", class: "btn btn-default" %> 
<% end %>
