<% provide(:title, 'Show Question') %>
<p>
  <strong>Original text:</strong>
  <%= @question.original_text %>
</p>

<p>
  <strong>Display text:</strong>
  <%= @question.display_text %>
</p>

<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= link_to @question.picture_url, @question.picture_url %>
</p>

<p>
  <strong>Image Owner:</strong>
  <%= @question.picture_owner %> 
</p>

<p>
  <strong>Image Attribution URL:</strong>
  <%= link_to @question.picture_attribution_url, @question.picture_attribution_url %>
</p>

<p>
  <strong>Name:</strong>
  <%= @question.name %>
</p>

<p>
  <strong>Anonymous:</strong>
  <%= @question.anonymous %>
</p>

<p>
  <strong>Featured:</strong>
  <%= @question.featured?%>
</p>

<p>
  <strong>Email:</strong>
  <%= @question.email %>
</p>

<p>
  <strong>Neighborhood:</strong>
  <%= @question.neighbourhood %>
</p>

<p>
  <strong>Category:</strong>
  <%= @question.categories.map(&:label).join(',') %>
</p>

<p>
  <strong>Reporter:</strong>
  <%= @question.reporter %>
</p>

<p>
  <strong>Status:</strong>
  <span class="status"><%= @question.status %></span>
</p>

<p>
  <strong>Answers:</strong>
  <% @answers.each do |answer| %>
    <div>
      <span class="answer_label"><%= answer.label %></span>
      <span class="answer_url"><%= answer.url %></span>
    </div>
  <% end %>
</p>

<p>
  <strong>Updates:</strong>
  <% @updates.each do |update| %>
    <div>
      <span class="update_label"><%= update.label %></span>
      <span class="update_url"><%= update.url %></span>
    </div>
  <% end %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @question.notes %>
</p>

<p>
  <strong>Tags:</strong>
  <%= display_tags(@question) %>
</p>

<%= link_to 'Edit', edit_admin_question_path(@question) %> |
<%= link_to 'Back', admin_questions_path %>
