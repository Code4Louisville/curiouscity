<script>
  $(document).ready(function() {
  $("body").css("display", "none");
  $("body").fadeIn(2000);
  $(".submit-question-text").limiter(140, $("#question_display_text_count"));
  });
</script>
<!--[if IE 8 ]>
<script>
  window.location = 'IE8_ask_widget';
</script>
<![endif]-->
<div class="ask-widget">
  <%= link_to image_tag("cc-logo.png", class: "widget-image-logo", alt: "WBEZ CuriousCity" ), root_url%>
  <div class="submit-wrap">
    <div class="carrot"></div>
    <div class="submit-question-container">
      <%= form_tag root_path(anchor:'ask'), id: 'ask-question-form', method: :get, target: '_blank' do %>
        <%= text_area_tag :display_text, nil, placeholder: "What do you wonder about Chicago, the region or its people that you want WBEZ to investigate?", class: "submit-question-text", maxlength: 140 %>
        <%= submit_tag "Submit", class: "btn submit-question-btn" %>
      <% end %>
      <span class="char-limit"><small>(<span id="question_display_text_count"></span> characters left)</small></span>
    </div>
  </div>
</div>
<%= render "footer_widget" %>
