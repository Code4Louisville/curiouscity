<script>

  var isPopoverVisible = false;
  $(document).ready(function(){ 
  $('#examples_link').popover({trigger: 'manual', placement: '<%= placement %>', html : true });
   });

  $('#examples_link').click(function (e) {
    $(this).popover('toggle');
    e.stopPropagation();
  });

  $(document).click(function (e) {
    if (($('.popover').has(e.target).length == 0) || $(e.target).is('.close')) {
      $('#examples_link').popover('show');
      $('#examples_link').click();
    }
  });
</script>

<a href="javascript:void(0);" role="button" class="popover-test" id="examples_link" title="" 
  data-content="<%= render guideline_content_partial%>" data-original-title='<strong>Guidelines</strong><a class="close" href="javascript:void(0);">&times;</a>'><%=link_label%></a>

