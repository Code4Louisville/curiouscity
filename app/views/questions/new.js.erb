$('document').ready(function() {
  $('.modal-backdrop').remove();
  $('#ask-question-modal').html("<%= escape_javascript(render('new')) %>");
  $('#modal-form-next').on('click', function(e){
    e.preventDefault();
    $('#new_question').submit();
  });
  $('#myModal').modal('show');
  $('#display_text').val('');
  $('#question_display_text').limiter(140, $('#question_display_text_count'));
});

